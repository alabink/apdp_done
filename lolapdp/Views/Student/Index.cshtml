@model IEnumerable<lolapdp.Models.Course>
@{
    ViewData["Title"] = "Khóa học của tôi";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Register" class="btn btn-primary">Đăng ký khóa học</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Mã khóa học</th>
            <th>Tên khóa học</th>
            <th>Mô tả</th>
            <th>Số tín chỉ</th>
            <th>Giảng viên</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CourseId</td>
                <td>@item.CourseName</td>
                <td>@item.Description</td>
                <td>@item.Credits</td>
                <td>@item.Faculty</td>
                <td>
                    <form asp-action="Withdraw" asp-route-courseId="@item.CourseId" method="post" style="display: inline;">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Bạn có chắc chắn muốn hủy đăng ký khóa học này?');">Hủy đăng ký</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
