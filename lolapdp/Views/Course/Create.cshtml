@model lolapdp.Models.Course

@{
    ViewData["Title"] = "Create New Course";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h2>@ViewData["Title"]</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div class="mb-3">
                            <label asp-for="CourseId" class="form-label">Course Code</label>
                            <input asp-for="CourseId" class="form-control" required />
                            <span asp-validation-for="CourseId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CourseName" class="form-label">Course Name</label>
                            <input asp-for="CourseName" class="form-control" maxlength="100" required />
                            <span asp-validation-for="CourseName" class="text-danger"></span>
                            <small class="text-muted">Maximum 100 characters</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="3" required></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Credits" class="form-label">Credits</label>
                                    <input asp-for="Credits" class="form-control" type="number" min="1" required />
                                    <span asp-validation-for="Credits" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Faculty" class="form-label">Faculty</label>
                                    <select asp-for="Faculty" class="form-select" required>
                                        <option value="">Select Faculty</option>
                                        @foreach (var faculty in ViewBag.FacultyList)
                                        {
                                            <option value="@faculty.Username">@faculty.FullName</option>
                                        }
                                    </select>
                                    <span asp-validation-for="Faculty" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                <input asp-for="IsActive" class="form-check-input" />
                                <label asp-for="IsActive" class="form-check-label">Active</label>
                            </div>
                        </div>

                        <div class="mb-3">
                            <button type="submit" class="btn btn-primary">Create Course</button>
                            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}