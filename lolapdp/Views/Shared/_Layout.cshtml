<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - lolapdp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lolapdp.styles.css" asp-append-version="true" />
    <!-- Thêm Bootstrap Icons CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <style>
        /* CSS cho sidebar */
        .sidebar {
            height: 100vh;
            width: 250px;
            position: fixed;
            left: -250px;
            top: 0;
            background-color: #343a40;
            transition: 0.3s;
            padding-top: 20px; /* Reduced to accommodate logo */
            z-index: 1;
            display: flex;
            flex-direction: column;
        }

            .sidebar.active {
                left: 0;
            }

            .sidebar .nav-link {
                color: #fff;
                padding: 15px 25px;
            }

                .sidebar .nav-link:hover {
                    background-color: #495057;
                }

        /* CSS cho main content */
        .main-content {
            margin-left: 0;
            transition: 0.3s;
        }

            .main-content.shifted {
                margin-left: 250px;
            }

        /* CSS cho dropdown user menu */
        .user-dropdown .dropdown-toggle::after {
            display: none;
        }

        .user-dropdown .dropdown-menu {
            right: 0;
            left: auto;
        }

        /* CSS for logo area */
        .sidebar-logo {
            text-align: center;
            padding: 15px 0;
            margin-bottom: 20px;
        }

            .sidebar-logo img {
                width: 150px;
                height: auto;
            }

        /* CSS for logout button at bottom */
        .sidebar-footer {
            margin-top: auto;
            padding: 15px;
            border-top: 1px solid #495057;
        }

            .sidebar-footer .nav-link {
                display: flex;
                align-items: center;
                justify-content: center;
            }

            .sidebar-footer i {
                margin-right: 10px;
            }
    </style>
</head>
<body>
    <!-- Sidebar Navigation -->
    @if (User.Identity.IsAuthenticated)
    {
        <div class="sidebar active">
            <!-- Logo Area -->
            <div class="sidebar-logo">
                <img src="/images/logo.png" alt="Logo" />
            </div>

            <!-- Main Navigation Menu -->
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                        <i class="bi bi-house-door"></i> Home
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">
                        <i class="bi bi-shield-lock"></i> Privacy
                    </a>
                </li>
                @if (User.IsInRole("Admin"))
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Admin" asp-action="ManageUsers">
                            <i class="bi bi-people"></i> User Management
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Course" asp-action="Index">
                            <i class="bi bi-book"></i> Course Management
                        </a>
                    </li>
                }
            </ul>

            <!-- Logout Button at Bottom -->
            <div class="sidebar-footer">
                <a class="nav-link" asp-controller="Account" asp-action="Logout">
                    <i class="bi bi-box-arrow-right"></i> Logout
                </a>
            </div>
        </div>
    }

    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">bindbl</a>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown user-dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-circle"></i> @User.Identity.Name
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="userDropdown">
                                    <li>
                                        <a class="dropdown-item" href="#">
                                            <i class="bi bi-person"></i> Profile
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="#">
                                            <i class="bi bi-gear"></i> Settings
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Account" asp-action="Logout">
                                            <i class="bi bi-box-arrow-right"></i> Logout
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right"></i> Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Account" asp-action="Register">
                                    <i class="bi bi-person-plus"></i> Register
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="main-content @(User.Identity.IsAuthenticated ? "shifted" : "")">
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container text-center">
            &copy; 2025 - Create & Design by bindbl
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @await RenderSectionAsync("Styles", required: false)

    <script>
        // Thêm active class cho menu item hiện tại
        document.addEventListener('DOMContentLoaded', function() {
            const currentPath = window.location.pathname;
            const navLinks = document.querySelectorAll('.sidebar .nav-link');

            navLinks.forEach(link => {
                if (link.getAttribute('href') === currentPath) {
                    link.classList.add('active');
                }
            });
        });
    </script>
</body>
</html>