@model lolapdp.Models.Course

@{
    ViewData["Title"] = "Edit Course";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0"><i class="bi bi-pencil-square me-2"></i>Edit Course</h2>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="CourseId" />

                <div class="mb-3">
                    <label class="form-label">Course Code</label>
                    <input asp-for="CourseId" class="form-control" readonly />
                </div>

                <div class="mb-3">
                    <label asp-for="CourseName" class="form-label">Course Name</label>
                    <input asp-for="CourseName" class="form-control" required />
                    <span asp-validation-for="CourseName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Description</label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Credits" class="form-label">Credits</label>
                    <input asp-for="Credits" class="form-control" type="number" min="1" required />
                    <span asp-validation-for="Credits" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Faculty" class="form-label">Faculty</label>
                    <select asp-for="Faculty" class="form-select" required>
                        <option value="">Select Faculty</option>
                        @foreach (var faculty in ViewBag.FacultyList)
                        {
                            <option value="@faculty.Username" selected="@(faculty.Username == Model.Faculty)">
                                @faculty.FullName
                            </option>
                        }
                    </select>
                    <span asp-validation-for="Faculty" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <div class="form-check">
                        <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                        <label asp-for="IsActive" class="form-check-label">Active</label>
                    </div>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle me-2"></i>Save Changes
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left me-2"></i>Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border: none;
            border-radius: 0.5rem;
        }

        .card-body {
            padding: 2rem;
        }

        .form-label {
            font-weight: 500;
            color: #495057;
        }

        .form-control, .form-select {
            border-radius: 0.375rem;
            border: 1px solid #dee2e6;
            padding: 0.5rem 1rem;
        }

        .form-control:focus, .form-select:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
        }

        .btn {
            padding: 0.5rem 1rem;
            font-weight: 500;
        }

        .text-danger {
            margin-top: 0.25rem;
            font-size: 0.875rem;
        }
    </style>
}
