<script>
    document.addEventListener('DOMContentLoaded', function() {
        const sections = document.querySelectorAll('.hero-section, .features-section, .benefits-section, .statistics-section, .key-features-section, .testimonials-section');
        let lastScrollY = window.scrollY;
        
        function handleScroll() {
            const currentScrollY = window.scrollY;
            const viewportHeight = window.innerHeight;
            const isScrollingUp = currentScrollY < lastScrollY;

            sections.forEach(section => {
                const rect = section.getBoundingClientRect();
                const sectionTop = rect.top;
                const sectionBottom = rect.bottom;
                
                // Bỏ qua hero section
                if (section.classList.contains('hero-section')) {
                    return;
                }

                // Kiểm tra section có trong vùng nhìn thấy không
                const isVisible = sectionTop < viewportHeight * 0.8 && sectionBottom > viewportHeight * 0.2;

                if (isVisible) {
                    if (!section.classList.contains('active')) {
                        section.classList.remove('inactive');
                        section.classList.add('active');
                        
                        // Xử lý các item con
                        const items = section.querySelectorAll('.reveal-item');
                        items.forEach((item, index) => {
                            setTimeout(() => {
                                item.classList.remove('inactive');
                                item.classList.add('active');
                            }, index * 100);
                        });
                    }
                } else {
                    if (section.classList.contains('active')) {
                        section.classList.remove('active');
                        section.classList.add('inactive');
                        
                        // Ẩn các item con ngay lập tức
                        const items = section.querySelectorAll('.reveal-item');
                        items.forEach(item => {
                            item.classList.remove('active');
                            item.classList.add('inactive');
                        });
                    }
                }
            });

            lastScrollY = currentScrollY;
        }

        // Khởi tạo trạng thái ban đầu
        sections.forEach(section => {
            if (!section.classList.contains('hero-section')) {
                section.classList.add('reveal', 'inactive');
                const items = section.querySelectorAll('.reveal-item');
                items.forEach(item => item.classList.add('inactive'));
            }
        });

        // Xử lý scroll với requestAnimationFrame
        let ticking = false;
        window.addEventListener('scroll', () => {
            if (!ticking) {
                window.requestAnimationFrame(() => {
                    handleScroll();
                    ticking = false;
                });
                ticking = true;
            }
        });

        // Xử lý lần đầu load trang
        handleScroll();
    });
</script>
