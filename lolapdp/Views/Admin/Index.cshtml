@model IEnumerable<lolapdp.Models.User>
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-4">
    <h1>Hello, @User.FindFirst("FullName")?.Value!</h1>
    <p class="lead">Welcome to the Course Management System</p>

    <div class="row mt-4">
        <div class="col-md-4 mb-4">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h5 class="card-title">Total Users</h5>
                    <h2 class="display-4">@ViewBag.UserCount</h2>
                    <a href="@Url.Action("ManageUsers", "Admin")" class="text-white">Manage Users</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h5 class="card-title">Courses</h5>
                    <h2 class="display-4">@ViewBag.CourseCount</h2>
                    <a href="@Url.Action("ManageCourses", "Admin")" class="text-white">Manage Courses</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h5 class="card-title">Faculty</h5>
                    <h2 class="display-4">@ViewBag.FacultyCount</h2>
                    <a href="@Url.Action("ManageFaculty", "Admin")" class="text-white">Manage Faculty</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="list-group">
                        <a href="@Url.Action("AddCourse", "Admin")" class="list-group-item list-group-item-action">
                            <i class="bi bi-plus-circle me-2"></i>Add New Course
                        </a>
                        <a href="@Url.Action("AddUser", "Admin")" class="list-group-item list-group-item-action">
                            <i class="bi bi-person-plus me-2"></i>Add New User
                        </a>
                        <a href="@Url.Action("AssignFaculty", "Admin")" class="list-group-item list-group-item-action">
                            <i class="bi bi-person-check me-2"></i>Assign Faculty to Course
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">System Overview</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <span>Active Students</span>
                        <span class="badge bg-primary">@ViewBag.ActiveStudents</span>
                    </div>
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <span>Active Courses</span>
                        <span class="badge bg-success">@ViewBag.ActiveCourses</span>
                    </div>
                    <div class="d-flex justify-content-between align-items-center">
                        <span>Total Enrollments</span>
                        <span class="badge bg-info">@ViewBag.TotalEnrollments</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Add any dashboard-specific JavaScript here
    </script>
}

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
}
