@model lolapdp.Models.Course

@{
    ViewData["Title"] = "Create Course";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title mb-4">Create New Course</h2>

                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="CourseCode" class="form-label">Course Code</label>
                            <input asp-for="CourseCode" class="form-control" maxlength="10" required />
                            <span asp-validation-for="CourseCode" class="text-danger"></span>
                            <small class="form-text text-muted">Maximum 10 characters</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CourseName" class="form-label">Course Name</label>
                            <input asp-for="CourseName" class="form-control" maxlength="100" required />
                            <span asp-validation-for="CourseName" class="text-danger"></span>
                            <small class="form-text text-muted">Maximum 100 characters</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="4" required></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Credits" class="form-label">Credits</label>
                                    <input asp-for="Credits" class="form-control" type="number" min="1" required />
                                    <span asp-validation-for="Credits" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Faculty" class="form-label">Faculty</label>
                                    <select asp-for="Faculty" class="form-select" required>
                                        <option value="">Select Faculty</option>
                                        @foreach (var faculty in ViewBag.FacultyList)
                                        {
                                            <option value="@faculty.Username">@faculty.Username</option>
                                        }
                                    </select>
                                    <span asp-validation-for="Faculty" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                <input asp-for="IsActive" class="form-check-input" />
                                <label asp-for="IsActive" class="form-check-label">Active</label>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                            <button type="submit" class="btn btn-primary">Create Course</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}